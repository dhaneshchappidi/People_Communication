<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".Full_branch">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/White">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/b_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notice Title"
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:textColor="@color/Black"
                android:layout_gravity="center_horizontal"
                android:typeface="serif"
                />
            <TextView
                android:id="@+id/b_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice Description"
                android:textColor="#0F0F0F"
                android:textSize="20sp"
                android:autoLink="all"
                android:layout_marginTop="50dp"
                />
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/b_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ALL"
                    android:textColor="#257CC0"
                    android:gravity="right"

                    />
            </LinearLayout>
            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/u_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#E9400B"
                android:text="username"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/uploaded_by"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/upload_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#E9400B"
                android:drawablePadding="5dp"
                android:text="uploaded_time"
                android:drawableStart="@drawable/uploaded_time"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>